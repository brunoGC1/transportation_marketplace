<div class="cards">
  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
    <ul>
      <% @transportations.each do |transportation| %>
        <p>Brand: <%= link_to transportation.brand, transportation_path(transportation.id)%></p>
        <p>Model: <%= transportation.brand_model %></p>
        <p>Price: <%= transportation.price %></p>
      <% end %>
    </ul>
  </div>
</div>
