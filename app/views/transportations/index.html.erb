<div class="container">
<div class="card-category" style="background-image: linear-gradient(#181D31), url(https://images.unsplash.com/photo-1604156788856-2ce5f2171cce?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80
);">
  Transportations:
</div>
  <div class="grid-container">
    <% @transportations.each do |transportation| %>
      <div class="card-trip">
        <% if transportation.photos.attached? %>
          <%= cl_image_tag(transportation.photos.first.key, :gravity=>"cld-decompose_tile", :crop=>"crop") %>
        <% else %>
          <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" />
        <% end %>
        <div class="card-trip-infos">
          <div>
            <p>Brand: <%= link_to transportation.brand, transportation_path(transportation.id)%></p>
            <p>Model: <%= transportation.brand_model %></p>
            <%# <p>Price: <%= transportation.price %>
          </div>
          <h2 class="card-trip-pricing"><%= "R$#{transportation.price}" %></h2>
          <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" />
        </div>
      </div>
    <% end %>
  </div>
 <%= link_to "New transportation", new_transportation_path, class: "btn btn-flat" %>
</div>

